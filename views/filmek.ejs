<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
        />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"
        ></script>
        <link
            rel="stylesheet"
            href="/css/stilus.css"
        />
        <link
            rel="shortcut icon"
            href="/images/logo.png"
            type="image/x-icon"
        />
        <link
            rel="stylesheet"
            href="/css/filmek.css"
        />
        <style>
            body {
            }

            h3 {
                color: black;
            }
            label {
                color: black;
            }
            p {
                color: black;
            }
            h1 {
                color: black;
            }
            .img {
                width: 200px;
                height: 350px;
            }
        </style>
        <title>Filmek</title>
    </head>
    <body>
        <%- include('./nav.ejs') %>
        <div class="container filmek-container">
            <h1 class="felhasznalok-felirat">Filmek</h1>
            <hr class="rounded">
            <div class="row">
                <div class="col-12">
                    <input
                        type="text"
                        id="kereso"
                        placeholder="Keresés film cím alapján"
                        oninput="kereso()"
                    />
                </div>
              <% for( let j = 0; j < filmek.length; j++ ) { %>
              <div class="col-sm-12 col-lg-6 col-xl-4">
                <img
                  src="/images/<%= filmek[j].plakat %>"
                  alt="<%= filmek[j].cim %>"
                />
                <h3>
                  <%= filmek[j].cim %>
                </h3>
                <p>Film hossza: <%= filmek[j].hossz %> perc</p>
                <h2>Statuszok:</h2>
                <ul>
                  <% for( let i = 0; i < filmek[j].statuszok.length; i++ )
                  { %>
                  <li><%= filmek[j].statuszok[i] %></li>
                  <% } %>
                </ul>
                <button class="adatok-gomb">
                  <a href="egyedifilm/<%= filmek[j]._id %>">Adatok</a>
                </button>
              </div>
              <% } %>
            </div>
          </div>
          <script>
    function kereso() {
        const keresoInput = document.getElementById("kereso");
        const keresoErtek = keresoInput.value.toLowerCase();
        const filmekContainer = document.querySelector(".filmek-container");
        const filmKartyak = filmekContainer.querySelectorAll(".col-sm-12.col-lg-6.col-xl-4");

        for (let i = 0; i < filmKartyak.length; i++) {
            const filmKartya = filmKartyak[i];
                const filmCim = filmKartya.querySelector("h3").textContent.toLowerCase();

                if (filmCim.includes(keresoErtek)) {
                   filmKartya.style.display = "block";
                } else {
                    filmKartya.style.display = "none";
                }
              }
         }
        </script>
    </body>
</html>
